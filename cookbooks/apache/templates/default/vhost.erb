<% if @port == 80 -%>
	NameVirtualHost *:80
<% end -%>
<VirtualHost *:<%= @port %> > 
	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>
<Directory <%= @document_root %> >
	Options Indexes FollowSymLinks MultiViews
	Options FollowsymLinks
	AllowOverride None
	Order allow,deny
	allow from all
</Directory>
</VirtualHost>
